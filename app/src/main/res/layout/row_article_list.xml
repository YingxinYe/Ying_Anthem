<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:background="@android:color/white"
            android:layout_margin="@dimen/article_title_padding"
            android:id="@+id/article_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/article_Image"
                    android:layout_marginTop="@dimen/article_title_padding"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/recycler_view_image_height"/>

            <TextView
                    android:id="@+id/article_title"
                    android:padding="@dimen/article_title_padding"
                    android:textColor="@android:color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/article_title_text_size"/>
            <TextView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/article_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/article_description"
                    android:layout_width="match_parent"
                    android:padding="@dimen/article_description_padding"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/article_title_description_size"/>

            <TextView
                    android:id="@+id/article_content"
                    android:layout_width="match_parent"
                    android:padding="@dimen/article_description_padding"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/article_title_content_size"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>